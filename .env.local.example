# Configuración de Base de Datos PostgreSQL
# Reemplaza con tu URL de conexión de PostgreSQL real
DATABASE_URL=postgresql://crisxd:TU_PASSWORD@TU_HOST:5432/TU_DATABASE

# Ejemplo con PostgreSQL local:
# DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/habitech

# Ejemplo con Neon (PostgreSQL en la nube):
# DATABASE_URL=postgresql://usuario:contraseña@ep-xxxxxx.us-east-2.aws.neon.tech/habitech

# Ejemplo con Supabase:
# DATABASE_URL=postgresql://postgres:contraseña@db.xxxxxx.supabase.co:5432/postgres

# Configuración de Brevo (Email Service)
# Obtén tu API Key en: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=tu_brevo_api_key_aqui
BREVO_FROM_EMAIL=tu_email@dominio.com

# URL de la aplicación (para enlaces en emails)
NEXT_PUBLIC_APP_URL=http://localhost:3000
