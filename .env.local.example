# Configuración de Base de Datos PostgreSQL
# Reemplaza con tu URL de conexión de PostgreSQL real
DATABASE_URL=postgresql://crisxd:TU_PASSWORD@TU_HOST:5432/TU_DATABASE

# Ejemplo con PostgreSQL local:
# DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/habitech

# Ejemplo con Neon (PostgreSQL en la nube):
# DATABASE_URL=postgresql://usuario:contraseña@ep-xxxxxx.us-east-2.aws.neon.tech/habitech

# Ejemplo con Supabase:
# DATABASE_URL=postgresql://postgres:contraseña@db.xxxxxx.supabase.co:5432/postgres

# Configuración de Brevo (Email Service)
# Obtén tu API Key en: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=tu_brevo_api_key_aqui
BREVO_FROM_EMAIL=tu_email@dominio.com

# Configuración de Stripe (Pasarela de Pagos)
# Obtén tus claves en: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_tu_clave_secreta_aqui
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_tu_clave_publica_aqui
# Webhook secret (obtener después de crear el webhook en Stripe)
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret_aqui

# Configuración de Pinata (IPFS Storage)
# Obtén tu JWT en: https://app.pinata.cloud/developers/api-keys
PINATA_JWT=tu_pinata_jwt_aqui
NEXT_PUBLIC_PINATA_GATEWAY=tu_gateway.mypinata.cloud

# Configuración de Blockchain NFT
# Dirección del contrato HabiTechDocumentNFT desplegado en Sepolia
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x...
# Private key de la wallet que despliega y mintea (usar una dedicada, NO la principal)
PRIVATE_KEY_DEPLOYER=0x...
# RPC de Sepolia (Alchemy, Infura, etc)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/tu_api_key

# URL de la aplicación (para enlaces en emails)
NEXT_PUBLIC_APP_URL=http://localhost:3000
